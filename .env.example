# Ejemplo de archivo de variables de entorno
# Copiar este archivo a .env y llenar con valores reales

# Configuración de la API
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT_SECONDS=30

# Autenticación
REQUIRE_AUTH=true
JWT_SECRET=your-secret-key-here

# Base de datos (solo para referencia, NO usar en la app móvil)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=admin
# DB_PASSWORD=password
# DB_NAME=reportes_turno

# Logging
LOG_LEVEL=info
ENABLE_CRASH_REPORTING=true

# Features flags
ENABLE_OFFLINE_MODE=true
ENABLE_EXPORT=true
